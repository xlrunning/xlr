{% extends 'mart_admin/base.html.twig' %}
{% block stylesheets %}
    <style>
        table.dataTable thead .sorting:after{
            margin-left: 10px;
        }
        table.dataTable thead .sorting_asc:after {
            margin-left: 10px;
        }
        table.dataTable thead .sorting_desc:after {
            margin-left: 10px;
        }
        
    </style>
{% endblock %}
{% block content %}
    <!-- Begin Panel -->
    <div class="container-fluid">
        <div class="panel panel-plain panel-rounded">
        <div class="panel-heading">
            <h3 class="panel-title">车量列表</h3>
            <!-- Begin Panel Toolbar -->
            <div class="panel-toolbar">
                <ul class="list-inline m-a-0">
                    <li><i class="rs-collapse-panel icon-toolbar-rotate icon-toolbar gcon gcon-chevron-up"></i></li>
                    <li><i class="rs-close-panel icon-toolbar gcon gcon-cross"></i></li>
                </ul>
            </div><!-- /.panel-toolbar -->
            <!-- End Panel Toolbar -->
        </div><!-- /.panel-heading -->
        <div class="panel-body">
            <table class="table table-b-t table-b-b datatable-default rs-table table-default">
                <thead>
                <tr>
                    <th>车牌号</th>
                    <th>品牌</th>
                    <th>报价</th>
                    <th>颜色</th>
                    <th>车辆信息</th>
                    <th>编辑</th>
                </tr>
                </thead>
                <tbody>
                {% for i in 0..20 %}
                    <tr>
                        <td>粤A1234{{ i }}</td>
                        <td>宝马</td>
                        <td>1324{{ i }}</td>
                        <td>红色</td>
                        <td>韶关</td>
                        <td><button class="btn btn-info">编辑<span class="fa fa-chrome icon-btn m-l"></span></button></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div><!-- .panel-body -->
    </div><!-- /.panel -->
    </div>
    <!-- End Panel -->
    <!-- chart-car-mileage-bar -->
    <div class="container-fluid">
        <!-- Begin Panel -->
        <div class="panel panel-plain panel-rounded">
            <div class="panel-heading">
                <h3 class="panel-title">车辆分布图</h3>
                <p class="subtitle text-uppercase m-t-xs">车辆行驶里程分布图</p>
                <!-- Begin Panel Toolbar -->
                <div class="panel-toolbar v-centered">
                    <ul class="list-inline m-a-0">
                        <li><i class="rs-collapse-panel icon-toolbar-rotate icon-toolbar gcon gcon-chevron-up"></i></li>
                        <li><i class="rs-refresh-panel icon-toolbar gcon gcon-cycle"></i></li>
                        <li><i class="rs-close-panel icon-toolbar gcon gcon-cross"></i></li>
                    </ul>
                </div><!-- /.panel-toolbar -->
                <!-- End Panel Toolbar -->
            </div><!-- /.panel-heading -->
            <div class="panel-body">
                <h4 class="text-center m-b-lg">能成汽车城车辆行驶里程分布图</h4>
                <canvas id="chart-car-mileage-bar" style="width: 100%; height: 300px;"></canvas>
            </div><!-- .panel-body -->
        </div><!-- /.panel -->
        <!-- End Panel -->
    </div>
    <!-- chart-car-mileage-bar end -->
    <!-- chart-car-brand-line -->
    <div class="container-fluid">
        <!-- Begin Panel -->
        <div class="panel panel-plain panel-rounded">
            <div class="panel-heading">
                <h3 class="panel-title">车辆品牌</h3>
                <p class="subtitle text-uppercase m-t-xs">车辆品牌分布图</p>
                <!-- Begin Panel Toolbar -->
                <div class="panel-toolbar v-centered">
                    <ul class="list-inline m-a-0">
                        <li><i class="rs-collapse-panel icon-toolbar-rotate icon-toolbar gcon gcon-chevron-up"></i></li>
                        <li><i class="rs-refresh-panel icon-toolbar gcon gcon-cycle"></i></li>
                        <li><i class="rs-close-panel icon-toolbar gcon gcon-cross"></i></li>
                    </ul>
                </div><!-- /.panel-toolbar -->
                <!-- End Panel Toolbar -->
            </div><!-- /.panel-heading -->
            <div class="panel-body">
                <h4 class="text-center m-b-lg">能成汽车城车辆行驶里程分布图</h4>
                <canvas id="chart-car-brand-line" style="width: 100%; height: 300px;"></canvas>
            </div><!-- .panel-body -->
        </div><!-- /.panel -->
        <!-- End Panel -->
    </div>
    <!-- chart-car-brand-line  end-->
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('/themes/roosa/plugins/datatable/datatables.min.js') }}"></script>
    <script src="{{ asset('/themes/roosa/plugins/datatable/datatables-example.js') }}"></script>
    <script src="{{ asset('/themes/roosa/plugins/chart-js/Chart.js') }}"></script>
    <script src="{{ asset('/themes/roosa/plugins/chart-js/chart-mileage.js') }}"></script>
{% endblock %}